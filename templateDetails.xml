			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="loadModal" type="radio" default="1" label="Enable modal pop-ups" description="Load the SqueezeBox JavaScript for modals. Requires MooTools to be enabled.">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="loadjQuery" type="jqueryversion" default="" label="Load jQuery" description="Select the version of the jQuery JavaScript library to load, hosted by Google. jQuery will not load if no version is selected." />
		<param type="panel" title="Layout" />			
		<param name="siteWidth" type="text" default="80.5" label="Site Width" description="Define the overall width of the layout. Enter only a number, no units, as you will choose which unit to use below." size="10" />	
		<param name="siteWidthType" type="radio" default="max-width" label="Site Width Style" description="Set whether to use a fluid max-width or fixed width layout.">
			<option value="max-width">Fluid Max-width</option>
			<option value="width">Fixed Width</option>
		</param>
		<param name="siteWidthUnit" type="radio" default="em" label="Site Width Type" description="Choose to set the width in relative Ems, Pixels or percentage. Ems are calculated based on their parent element size, where the body font size is approximately 12px.">
			<option value="em">Em</option>
			<option value="px">Pixel</option>
			<option value="%">Percent</option>
		</param>	
		<param name="fluidMedia" type="radio" default="0" label="Fluid Media" description="Enable for fluid image and object resizing when using a fluid layout. NOTE: Do not specify widths in the source-code as this option enables an img, object {max-width:100%} declaration">
		  <option value="1">Yes</option>
		  <option value="0">No</option>
		</param>
		<param name="fullWidth" type="radio" default="1" label="Full Width Elements" description="Should the header and footer expand to be the full width of the browser viewport or be constrained to the same width defined above.">
		  <option value="1">Yes</option>
		  <option value="0">No</option>
		</param>
		<param name="useStickyFooter" type="radio" default="1" label="Use CSS Sticky Footer" description="Enable the use a CSS Sticky Footer, which requires a fixed height. Dynamic content of varying sizes may require special attention when using this.">
        	<option value="1">Yes</option>
        	<option value="0">No</option>
    	</param>
		<param name="stickyFooterHeight" type="text" default="175" label="Sticky Footer Height" description="Set the fixed height, in pixels, of your sticky footer." size="5" />				
		<param type="panel" title="Typography" />	
		<param name="googleWebFont" type="googlewebfont" default="" label="Google Web Font" description="The Google Web font to be applied to the designated targets below. Visit http://code.google.com/webfonts for more information." />								
		<param name="googleWebFontTargets" type="text" default="h1,h2,h3,h4,h5,h6" label="Google Web Font Targets" description="A comma seperated list of the html elements, CSS IDs, and classes to apply the selected Google Web Font to. If targeting the body, be sure to set the Body Font Family to None Selected." size="50" />
